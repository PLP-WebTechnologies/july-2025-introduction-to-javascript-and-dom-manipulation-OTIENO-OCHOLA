        <div class="content">
            <!-- Part 1: JavaScript Basics -->
            <section class="part">
                <h2>Part 1: JavaScript Basics</h2>

                <div class="demo-box">
                    <h3>Variable Declaration & Data Types</h3>
                    <button onclick="showDataTypes()">Show Data Types</button>
                    <div class="output" id="dataTypesOutput"></div>
                </div>

                <div class="demo-box">
                    <h3>Conditional Logic</h3>
                    <p>Enter your age:</p>
                    <input type="number" id="ageInput" placeholder="Enter your age">
                    <button onclick="checkAge()">Check Eligibility</button>
                    <div class="output" id="ageOutput"></div>
                </div>

                <div class="demo-box">
                    <h3>Simple Calculator</h3>
                    <input type="number" id="num1" placeholder="First number">
                    <input type="number" id="num2" placeholder="Second number">
                    <select id="operation">
                        <option value="add">Add</option>
                        <option value="subtract">Subtract</option>
                        <option value="multiply">Multiply</option>
                        <option value="divide">Divide</option>
                    </select>
                    <button onclick="calculate()">Calculate</button>
                    <div class="output" id="calcOutput"></div>
                </div>
            </section>

            <!-- Part 2: JavaScript Functions -->
            <section class="part">
                <h2>Part 2: JavaScript Functions</h2>

                <div class="demo-box">
                    <h3>String Formatter</h3>
                    <input type="text" id="formatInput" placeholder="Enter text to format">
                    <button onclick="formatText('upper')">UPPERCASE</button>
                    <button onclick="formatText('lower')">lowercase</button>
                    <button onclick="formatText('capitalize')">Capitalize</button>
                    <div class="output" id="formatOutput"></div>
                </div>

                <div class="demo-box">
                    <h3>Tax Calculator</h3>
                    <input type="number" id="salaryInput" placeholder="Enter your salary">
                    <button onclick="calculateTax()">Calculate Tax</button>
                    <div class="output" id="taxOutput"></div>
                </div>

                <div class="demo-box">
                    <h3>Number Utilities</h3>
                    <input type="number" id="numberInput" placeholder="Enter a number">
                    <button onclick="checkNumber('even')">Is Even?</button>
                    <button onclick="checkNumber('prime')">Is Prime?</button>
                    <button onclick="checkNumber('positive')">Is Positive?</button>
                    <div class="output" id="numberOutput"></div>
                </div>
            </section>
        </div>

        <div class="content">
            <!-- Part 3: JavaScript Loops -->
            <section class="part">
                <h2>Part 3: JavaScript Loops</h2>

                <div class="demo-box">
                    <h3>Multiplication Table</h3>
                    <input type="number" id="tableNumber" placeholder="Enter a number" value="5">
                    <button onclick="generateTable()">Generate Table</button>
                    <div class="output" id="tableOutput"></div>
                </div>

                <div class="demo-box">
                    <h3>Array Iteration</h3>
                    <button onclick="iterateArray()">Iterate Sample Array</button>
                    <div class="output" id="arrayOutput"></div>
                </div>

                <div class="demo-box">
                    <h3>Countdown Timer</h3>
                    <input type="number" id="countdownInput" placeholder="Seconds" value="10">
                    <button onclick="startCountdown()">Start Countdown</button>
                    <div class="output" id="countdownOutput"></div>
                </div>
            </section>

            <!-- Part 4: DOM Manipulation -->
            <section class="part">
                <h2>Part 4: DOM Manipulation</h2>

                <div class="demo-box">
