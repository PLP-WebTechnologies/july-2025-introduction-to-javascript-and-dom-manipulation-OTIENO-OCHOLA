    <script>
        // Part 1: JavaScript Basics

        // Variable declarations and data types
        function showDataTypes() {
            // Different data types
            const stringVar = "Hello, World!";
            const numberVar = 42;
            const booleanVar = true;
            const arrayVar = [1, 2, 3, 4, 5];
            const objectVar = { name: "John", age: 30 };
            const nullVar = null;
            let undefinedVar;

            // Display the data types
            const output = `
                <p>String: ${stringVar} (${typeof stringVar})</p>
                <p>Number: ${numberVar} (${typeof numberVar})</p>
                <p>Boolean: ${booleanVar} (${typeof booleanVar})</p>
                <p>Array: [${arrayVar}] (${typeof arrayVar})</p>
                <p>Object: ${JSON.stringify(objectVar)} (${typeof objectVar})</p>
                <p>Null: ${nullVar} (${typeof nullVar})</p>
                <p>Undefined: ${undefinedVar} (${typeof undefinedVar})</p>
            `;

            document.getElementById('dataTypesOutput').innerHTML = output;
        }

        // Conditional logic example
        function checkAge() {
            const age = document.getElementById('ageInput').value;
            let message;

            if (age >= 18) {
                message = "You are eligible to vote!";
            } else if (age >= 13) {
                message = "You are a teenager.";
            } else if (age > 0) {
                message = "You are a child.";
            } else {
                message = "Please enter a valid age.";
            }

            document.getElementById('ageOutput').textContent = message;
        }

        // Simple calculator
        function calculate() {
            const num1 = parseFloat(document.getElementById('num1').value);
            const num2 = parseFloat(document.getElementById('num2').value);
            const operation = document.getElementById('operation').value;
            let result;

            if (isNaN(num1) || isNaN(num2)) {
                result = "Please enter valid numbers!";
            } else {
                switch (operation) {
                    case 'add':
                        result = `${num1} + ${num2} = ${num1 + num2}`;
                        break;
                    case 'subtract':
                        result = `${num1} - ${num2} = ${num1 - num2}`;
                        break;
                    case 'multiply':
                        result = `${num1} × ${num2} = ${num1 * num2}`;
                        break;
                    case 'divide':
                        result = num2 !== 0 ?
                            `${num1} ÷ ${num2} = ${num1 / num2}` :
                            "Cannot divide by zero!";
                        break;
                    default:
                        result = "Invalid operation!";
                }
            }

            document.getElementById('calcOutput').textContent = result;
        }

        // Part 2: JavaScript Functions

        // String formatting functions
        function formatText(formatType) {
            const inputText = document.getElementById('formatInput').value;
            let formattedText;

            switch (formatType) {
                case 'upper':
                    formattedText = inputText.toUpperCase();
                    break;
                case 'lower':
                    formattedText = inputText.toLowerCase();
                    break;
                case 'capitalize':
                    formattedText = inputText.charAt(0).toUpperCase() +
                        inputText.slice(1).toLowerCase();
                    break;
                default:
                    formattedText = "Invalid format type!";
            }

            document.getElementById('formatOutput').textContent = formattedText;
        }

        // Tax calculation function
        function calculateTax() {
            const salary = parseFloat(document.getElementById('salaryInput').value);

            if (isNaN(salary) || salary < 0) {
                document.getElementById('taxOutput').textContent = "Please enter a valid salary!";
                return;
            }

            let taxRate;
            if (salary <= 10000) {
                taxRate = 0.1;
            } else if (salary <= 50000) {
                taxRate = 0.2;
            } else {
                taxRate = 0.3;
            }

            const taxAmount = salary * taxRate;
            const netSalary = salary - taxAmount;

            const result = `
                Gross Salary: $${salary.toFixed(2)}<br>
                Tax Rate: ${(taxRate * 100)}%<br>
                Tax Amount: $${taxAmount.toFixed(2)}<br>
                Net Salary: $${netSalary.toFixed(2)}
            `;

            document.getElementById('taxOutput').innerHTML = result;
        }

        // Number utility functions
        function checkNumber(checkType) {
            const number = parseFloat(document.getElementById('numberInput').value);
            let result;

            if (isNaN(number)) {
                result = "Please enter a valid number!";
            } else {
                switch (checkType) {
                    case 'even':
                        result = `${number} is ${number % 2 === 0 ? 'even' : 'odd'}`;
                        break;
                    case 'prime':
                        result = isPrime(number) ?
                            `${number} is a prime number` :
                            `${number} is not a prime number`;
                        break;
                    case 'positive':
                        result = `${number} is ${number >= 0 ? 'positive' : 'negative'}`;
                        break;
                    default:
                        result = "Invalid check type!";
                }
            }

            document.getElementById('numberOutput').textContent = result;
        }

        // Helper function to check if a number is prime
        function isPrime(num) {
            if (num <= 1) return false;
            if (num === 2) return true;
            if (num % 2 === 0) return false;

            for (let i = 3; i <= Math.sqrt(num); i += 2) {
                if (num % i === 0) return false;
            }

            return true;
        }

        // Part 3: JavaScript Loops

        // Multiplication table using for loop
        function generateTable() {
            const number = parseInt(document.getElementById('tableNumber').value);
            let tableHTML = `<h4>Multiplication Table for ${number}</h4>`;

            for (let i = 1; i <= 10; i++) {
                tableHTML += `<p>${number} × ${i} = ${number * i}</p>`;
            }

            document.getElementById('tableOutput').innerHTML = tableHTML;
        }

        // Array iteration using forEach
        function iterateArray() {
            const fruits = ["Apple", "Banana", "Orange", "Grapes", "Mango"];
            let outputHTML = "<h4>Fruits List</h4><ul>";

            fruits.forEach((fruit, index) => {
                outputHTML += `<li>Fruit ${index + 1}: ${fruit}</li>`;
            });

            outputHTML += "</ul>";
            document.getElementById('arrayOutput').innerHTML = outputHTML;
        }

        // Countdown timer using while loop
        function startCountdown() {
            let seconds = parseInt(document.getElementById('countdownInput').value);
            const countdownOutput = document.getElementById('countdownOutput');

            if (isNaN(seconds) || seconds <= 0) {
                countdownOutput.textContent = "Please enter a valid number of seconds!";
                return;
            }

            countdownOutput.textContent = `Countdown: ${seconds}`;

            const countdownInterval = setInterval(() => {
                seconds--;

                if (seconds >= 0) {
                    countdownOutput.textContent = `Countdown: ${seconds}`;
                } else {
                    clearInterval(countdownInterval);
                    countdownOutput.textContent = "Countdown finished!";
                }
            }, 1000);
        }

        // Part 4: DOM Manipulation

        // Add items to list
        function addToList() {
            const userInput = document.getElementById('userInput');
            const userList = document.getElementById('userList');

            if (userInput.value.trim() !== "") {
                const newItem = document.createElement('li');
                newItem.innerHTML = `
                    ${userInput.value}
                    <button onclick="removeItem(this)">Remove</button>
                `;
                userList.appendChild(newItem);
                userInput.value = "";
            }
        }

        // Remove items from list
        function removeItem(button) {
            const listItem = button.parentElement;
            listItem.parentElement.removeChild(listItem);
        }

        // Theme switcher
        function switchTheme(theme) {
            const body = document.body;

            // Remove any existing theme classes
            body.classList.remove('light-theme', 'dark-theme', 'blue-theme');

            // Apply the selected theme
            switch (theme) {
                case 'light':
                    body.style.backgroundColor = '#f5f7fa';
                    body.style.color = '#333';
                    break;
                case 'dark':
                    body.style.backgroundColor = '#333';
                    body.style.color = '#f5f7fa';
                    break;
                case 'blue':
                    body.style.backgroundColor = '#e0f0ff';
                    body.style.color = '#004080';
                    break;
            }
        }

        // Change element style
        function changeStyle(property, value) {
            const styleText = document.getElementById('styleText');

            if (property === 'reset') {
                styleText.removeAttribute('style');
            } else {
                styleText.style[property] = value;
            }

            // Add highlight effect
            styleText.classList.add('highlight');
            setTimeout(() => {
                styleText.classList.remove('highlight');
            }, 500);
        }
    </script>
</body>

